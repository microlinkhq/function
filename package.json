{
  "name": "@microlink/functions-root",
  "description": "The easiest way to generate dynamic social images at scale.",
  "homepage": "https://github.com/microlinkhq/functions",
  "version": "",
  "author": {
    "email": "hello@microlink.io",
    "name": "microlink.io",
    "url": "https://microlink.io"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microlinkhq/functions.git"
  },
  "bugs": {
    "url": "https://github.com/microlinkhq/functions/issues"
  },
  "keywords": [
    "browserless",
    "chrome",
    "chromium",
    "function",
    "microlink",
    "playwright",
    "puppeteer",
    "serverless"
  ],
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "ci-publish": "latest",
    "conventional-github-releaser": "latest",
    "finepack": "latest",
    "git-authors-cli": "latest",
    "lerna": "latest",
    "nano-staged": "latest",
    "npm-check-updates": "latest",
    "standard": "latest",
    "prettier-standard": "latest",
    "simple-git-hooks": "latest",
    "standard-version": "latest"
  },
  "engines": {
    "node": ">= 12"
  },
  "scripts": {
    "clean": "pnpm -r exec -- rm -rf node_modules",
    "clean:build": "pnpm -r exec -- rm -rf dist",
    "contributors": "(pnpm -r exec finepack --parallel && git-authors-cli && finepack && git add package.json && git commit -m 'build: contributors' --no-verify) || true",
    "lint": "standard",
    "prebuild": "npm run clean:build",
    "prerelease": "npm run update:check && npm run contributors && npm run build",
    "pretest": "npm run lint",
    "release": "lerna publish --yes --sort --conventional-commits -m \"chore(release): %s\" --create-release github",
    "test": "pnpm -r run test",
    "update": "lerna exec ncu -- -u",
    "update:check": "ncu -- --error-level 2"
  },
  "private": true,
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "nano-staged": {
    "*.js,!*.min.js,": [
      "prettier-standard"
    ],
    "package.json": [
      "finepack"
    ]
  },
  "standard": {
    "ignore": [
      "packages/npm/dist"
    ]
  },
  "simple-git-hooks": {
    "commit-msg": "npx commitlint --edit",
    "pre-commit": "npx nano-staged"
  }
}
