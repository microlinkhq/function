{
  "name": "@microlink/function",
  "description": "JavaScript runtime functions made simple.",
  "homepage": "https://nicedoc.io/microlink/microlink-function",
  "version": "0.0.1",
  "main": "src/node.js",
  "author": {
    "email": "josefrancisco.verdu@gmail.com",
    "name": "Kiko Beats",
    "url": "https://github.com/Kikobeats"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microlink/microlink-function.git"
  },
  "bugs": {
    "url": "https://github.com/microlink/microlink-function/issues"
  },
  "keywords": [
    "browserless",
    "chrome",
    "chromium",
    "function",
    "microlink",
    "playwright",
    "puppeteer",
    "serverless"
  ],
  "dependencies": {
    "@microlink/mql": "~0.9.3",
    "base64-url": "~2.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "@rollup/plugin-commonjs": "latest",
    "@rollup/plugin-node-resolve": "latest",
    "@rollup/plugin-replace": "latest",
    "abort-controller": "latest",
    "ava": "latest",
    "conventional-github-releaser": "latest",
    "finepack": "latest",
    "git-authors-cli": "latest",
    "git-dirty": "latest",
    "lint-staged": "latest",
    "node-fetch": "latest",
    "npm-check-updates": "latest",
    "nyc": "latest",
    "prettier-standard": "latest",
    "rollup": "latest",
    "rollup-plugin-filesize": "latest",
    "rollup-plugin-shim": "latest",
    "rollup-plugin-terser": "latest",
    "rollup-plugin-visualizer": "latest",
    "simple-git-hooks": "latest",
    "standard": "latest",
    "standard-markdown": "latest",
    "standard-version": "latest"
  },
  "engines": {
    "node": ">= 12"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "clean": "rm -rf node_modules",
    "dev": "npm run build -- -w",
    "lint": "standard",
    "postrelease": "npm run release:build && npm run release:tags && npm run release:github && (ci-publish || npm publish --access=public)",
    "prerelease": "git-dirty && npm run update:check && npm test",
    "pretest": "npm run lint",
    "release": "git-authors-cli && git add package.json && standard-version -a",
    "release:build": "npm run build && git add dist/ && git commit -m \"build(no-release): generate bundle\"",
    "release:github": "conventional-github-releaser -p angular",
    "release:tags": "git push --follow-tags origin master",
    "test": "nyc ava --verbose",
    "update": "ncu -u",
    "update:check": "ncu -- --error-level 2"
  },
  "license": "MIT",
  "ava": {
    "files": [
      "!test/browser-globals.js",
      "!test/clients.js",
      "test/**/*"
    ],
    "timeout": "1m"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "package.json": [
      "finepack --sort-ignore-object-at ava"
    ],
    "*.js": [
      "prettier-standard"
    ],
    "*.md": [
      "standard-markdown"
    ]
  },
  "simple-git-hooks": {
    "commit-msg": "npx commitlint --edit",
    "pre-commit": "npx lint-staged"
  },
  "standard": {
    "ignore": [
      "dist"
    ]
  },
  "umd:main": "dist/microlink-function.js",
  "unpkg": "dist/microlink-function.js"
}
